<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@color/black">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="32dp"
        tools:context=".MainActivity">

        <!-- Título de la app -->
        <TextView
            android:id="@+id/tvTitulo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mi Música"
            android:textSize="32sp"
            android:textColor="#FF6600"
            android:textStyle="bold"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <!-- TextInputLayout mejorado para búsqueda-->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tilBuscar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="16dp"
            android:hint="Buscar canciones..."
            android:textColorHint="#FFFFFF"
            app:boxStrokeColor="#FF6600"
            app:hintTextColor="#FF6600"
            app:startIconDrawable="@android:drawable/ic_menu_search"
            app:startIconTint="#FF6600"
            app:boxBackgroundColor="#1A1A1A"
            app:layout_constraintTop_toBottomOf="@id/tvTitulo"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etBuscar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#FFFFFF"/>

        </com.google.android.material.textfield.TextInputLayout>

        <!-- Título del Carousel-->
        <TextView
            android:id="@+id/tvRecomendadas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Recomendadas para ti"
            android:textColor="#FF6600"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginTop="24dp"
            android:layout_marginStart="16dp"
            app:layout_constraintTop_toBottomOf="@id/tilBuscar"
            app:layout_constraintStart_toStartOf="parent"/>

        <!-- Carousel para canciones recomendadas-->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/carouselCanciones"
            android:layout_width="0dp"
            android:layout_height="150dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="8dp"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@id/tvRecomendadas"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <!-- Imagen del álbum-->
        <ImageView
            android:id="@+id/ivAlbum"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_marginTop="24dp"
            android:src="@android:drawable/ic_menu_gallery"
            android:contentDescription="Portada del álbum"
            app:layout_constraintTop_toBottomOf="@id/carouselCanciones"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:tint="#FF6600"
            android:scaleType="centerCrop"/>

        <!-- Barra de progreso de la canción -->
        <com.google.android.material.progressindicator.LinearProgressIndicator
            android:id="@+id/progressCancion"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="32dp"
            android:layout_marginTop="16dp"
            app:indicatorColor="#FF6600"
            app:trackColor="#333333"
            app:trackThickness="4dp"
            android:progress="45"
            android:max="100"
            app:layout_constraintTop_toBottomOf="@id/ivAlbum"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <!-- Tiempo transcurrido-->
        <TextView
            android:id="@+id/tvTiempoActual"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1:23"
            android:textColor="#FFFFFF"
            android:textSize="12sp"
            android:layout_marginTop="4dp"
            app:layout_constraintTop_toBottomOf="@id/progressCancion"
            app:layout_constraintStart_toStartOf="@id/progressCancion"/>

        <!-- Tiempo total-->
        <TextView
            android:id="@+id/tvTiempoTotal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3:45"
            android:textColor="#FFFFFF"
            android:textSize="12sp"
            android:layout_marginTop="4dp"
            app:layout_constraintTop_toBottomOf="@id/progressCancion"
            app:layout_constraintEnd_toEndOf="@id/progressCancion"/>

        <!-- Nombre de la canción-->
        <TextView
            android:id="@+id/tvNombreCancion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nombre de la Canción"
            android:textSize="20sp"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/tvTiempoActual"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <!-- Artista-->
        <TextView
            android:id="@+id/tvArtista"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nombre del Artista"
            android:textSize="16sp"
            android:textColor="#CCCCCC"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/tvNombreCancion"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <!-- CheckBox de favoritos-->
        <CheckBox
            android:id="@+id/cbFavorito"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Añadir a favoritos"
            android:textColor="#FFFFFF"
            android:buttonTint="#FF6600"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/tvArtista"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <!-- RadioGroup para playlists-->
        <TextView
            android:id="@+id/tvAgregarA"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Agregar a playlist:"
            android:textColor="#FF6600"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/cbFavorito"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <RadioGroup
            android:id="@+id/rgPlaylists"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/tvAgregarA"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <RadioButton
                android:id="@+id/rbPlaylist1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mis Favoritas"
                android:textColor="#FFFFFF"
                android:buttonTint="#FF6600"/>

            <RadioButton
                android:id="@+id/rbPlaylist2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Para Entrenar"
                android:textColor="#FFFFFF"
                android:buttonTint="#FF6600"/>

            <RadioButton
                android:id="@+id/rbPlaylist3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Relajante"
                android:textColor="#FFFFFF"
                android:buttonTint="#FF6600"/>
        </RadioGroup>

        <!-- Controles de reproducción -->
        <LinearLayout
            android:id="@+id/layoutControles"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@id/rgPlaylists"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <!-- ImageButton anterior -->
            <ImageButton
                android:id="@+id/btnAnterior"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@android:drawable/ic_media_previous"
                android:background="@android:color/transparent"
                android:contentDescription="Canción anterior"
                android:layout_marginEnd="16dp"
                app:tint="#FF6600" />

            <!-- Botón de Play-->
            <Button
                android:id="@+id/btnPlay"
                android:layout_width="120dp"
                android:layout_height="60dp"
                android:text="PLAY"
                android:textSize="18sp"
                android:textColor="#FFFFFF"
                android:backgroundTint="#FF6600"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"/>

            <!-- ImageButton siguiente-->
            <ImageButton
                android:id="@+id/btnSiguiente"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@android:drawable/ic_media_next"
                android:background="@android:color/transparent"
                android:contentDescription="Siguiente canción"
                android:layout_marginStart="16dp"
                app:tint="#FF6600" />

        </LinearLayout>

        <!-- Switch para modo aleatorio-->
        <Switch
            android:id="@+id/switchAleatorio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Modo Aleatorio"
            android:textColor="#FFFFFF"
            android:layout_marginTop="16dp"
            app:thumbTint="#FF6600"
            app:trackTint="#FFFFFF"
            app:layout_constraintTop_toBottomOf="@id/layoutControles"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <!-- Contenedor para Fragment de Biblioteca-->
        <TextView
            android:id="@+id/tvTituloFragments"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Secciones"
            android:textColor="#FF6600"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@id/switchAleatorio"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <FrameLayout
            android:id="@+id/fragmentBiblioteca"
            android:layout_width="0dp"
            android:layout_height="250dp"
            android:layout_marginTop="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:background="#1A1A1A"
            app:layout_constraintTop_toBottomOf="@id/tvTituloFragments"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <!-- Contenedor para Fragment de Explorar-->
        <FrameLayout
            android:id="@+id/fragmentExplorar"
            android:layout_width="0dp"
            android:layout_height="250dp"
            android:layout_marginTop="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp"
            android:background="#1A1A1A"
            app:layout_constraintTop_toBottomOf="@id/fragmentBiblioteca"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>